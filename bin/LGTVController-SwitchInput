#!/bin/bash

source /usr/bin/LGTVController/LGTVController


# check available picture modes for your specific model / WebOS version at:
# https://github.com/chros73/bscpylgtv#examples


# there are no arguments
if [ $# -eq "0" ]
then
    echo "$tv_name :: SWITCH - Input to $hdmi_input_switch"
    SwitchHDMIInput $hdmi_input_switch

    exit 0
fi


# there is exactly one argument
if [ $# -eq "1" ]
then
    echo "$tv_name :: SWITCH - Input to $1"
    SwitchHDMIInput $1

    exit 0
fi


# there is more than one argument
if [ $# -gt "1" ]
then
    echo "$tv_name :: SWITCH - Too many arguments (there are underscores instead of spaces in the HDMI input names, fi: HDMI_1)"

    exit 0
fi
