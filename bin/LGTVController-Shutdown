#!/bin/bash

source /usr/bin/LGTVController/LGTVController


# if the other pc is alive then switch input, otherwise power off
if IsHOSTAlive $otherpc_hostname
then
    echo "$tv_name :: HOST - $otherpc_hostname online ... switching input."
    SwitchHDMIInput $wanted_hdmi_input_shutdown

else
    echo "$tv_name :: HOST - $otherpc_hostname offline ... powering OFF."
    TogglePowerOFF
fi
